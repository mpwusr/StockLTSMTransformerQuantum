{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run GUI (main.py)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "python": "${command:python.interpreterPath}",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Run GUI (no debug)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "python": "${command:python.interpreterPath}",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "noDebug": true
        },
        {
            "name": "Run All Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "python": "${command:python.interpreterPath}",
            "args": ["tests/", "-v", "--tb=short"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        },
        {
            "name": "Run Tests with Coverage",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "python": "${command:python.interpreterPath}",
            "args": [
                "tests/", "-v", "--tb=short",
                "--cov=.", "--cov-report=term-missing", "--cov-report=html"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        },
        {
            "name": "Debug Current Test File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "python": "${command:python.interpreterPath}",
            "args": ["${file}", "-v", "--tb=long", "-s"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        },
        {
            "name": "Validate Config",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/config.py",
            "python": "${command:python.interpreterPath}",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Version Check",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/versions.py",
            "python": "${command:python.interpreterPath}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}
